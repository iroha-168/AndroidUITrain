<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ranking_image_group"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/ranking_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ranking_text_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ranking_image_group"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/ranking_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="どすこい塾"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/ranking_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="どすこいふんどし"
            android:layout_marginTop="8dp"
            android:textSize="11sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/ranking_brand"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/ranking_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="￥3,300"
            android:textSize="14sp"
            android:textColor="@color/person_image_pink"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ranking_category"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ranking_favorite"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/heart_gray"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ranking_category"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
